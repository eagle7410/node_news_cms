FROM node
RUN apt-get update
RUN apt-get install vim
WORKDIR /usr/src/app
RUN git clone https://github.com/eagle7410/node_news_cms.git /srv/app
WORKDIR /srv/app
COPY package*.json ./
RUN npm install pm2 -g
RUN npm install
ADD ./configs ./configs
ADD ./logs ./logs
EXPOSE 3539
CMD [ "node", "server_clientsy/entry.js" ]
